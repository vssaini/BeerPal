@model BeerPal.Web.ViewComponents.GatewaySwitchModel
@{
}

<a href="#" class="dropdown-toggle" data-toggle="dropdown">@Model.CurrentGateway.DisplayName <b class="caret"></b></a>
<ul class="dropdown-menu">
    @foreach (var gateway in Model.OtherGateways)
    {
        <li><a asp-area="@gateway.PathName" asp-controller="Home" asp-action="Index">@gateway.DisplayName</a></li>
    }
</ul>