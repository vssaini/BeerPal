@using Newtonsoft.Json
@model Stripe.StripeSubscription

@{
    ViewBag.Title = "Subscription Details";
}

<div class="heads" style="background: url(/img/brewery-back1.jpg) 50% 27%;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> Subscription Details</h2>
            </div>
        </div>
    </div>
</div>

<div class="page-content">
    <div class="container">
        <div class="row confirm">
            <div class="col-md-12">
                <a href="@Url.Action("Cancel", "Subscribers", new {id=Model.Id})" @(Model.Status != "canceled" ? "" : "disabled") class="btn btn-warning">Cancel</a>
            </div>
        </div>
        <div class="row confirm">
            <div class="col-md-12">
                <pre>@JsonConvert.SerializeObject(Model, Formatting.Indented)</pre>
            </div>
        </div>
    </div>
</div>